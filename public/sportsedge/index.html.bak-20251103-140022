  <style>
    body{font-family:system-ui,-apple-system,"Segoe UI",Roboto,sans-serif;background:#0f1b2b;color:#e6eef9;margin:24px}
    .wrap{max-width:980px;margin:auto}
    h1{margin:0 0 8px}
    small{color:#98a7bd}
    .card{background:#15253c;border-radius:12px;padding:16px;margin-top:16px}
    .badge{display:inline-block;padding:2px 8px;border-radius:999px;font-size:12px;margin-left:8px}
    .green{background:#0f5132;color:#d1f2e0}
    .yellow{background:#664d03;color:#fff1c2}
    .red{background:#842029;color:#ffd7d7}
    ul{padding-left:18px;margin:8px 0 0 0}
    li{margin:6px 0}
    .disclaimer{background:#071226;padding:10px 14px;border-radius:8px;color:#cbe7f7;margin-bottom:12px;border:1px solid rgba(200,220,240,0.04)}
    .top-actions{float:right}
    .logout{background:#2b3b47;color:#dfeff7;padding:6px 10px;border-radius:6px;border:none;cursor:pointer}
  </style>
